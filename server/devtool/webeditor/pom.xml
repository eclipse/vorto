	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.vorto</groupId>
		<artifactId>devtool</artifactId>
		<version>0.10.0-SNAPSHOT</version>
	</parent>

	<artifactId>webeditor</artifactId>
	<packaging>jar</packaging>
	<name>Vorto Devtool</name>
	<description>A web editor to describe devices using information models and share them with the Vorto Repository</description>

	<build>
		<finalName>webeditor</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
						<configuration>
							<addResources>true</addResources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.eclipse.vorto.server.devtool.DevToolServer</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.bosch.tina</groupId>
				<artifactId>tina-maven-plugin</artifactId>
				<configuration>
					<applicationId>vorto-editor</applicationId>
					<filesToScanPattern>
						<param>${project.build.directory}/*.jar</param>
					</filesToScanPattern>
					<clmServer>http://clmserver.bosch-si.com</clmServer>
					<clmScanResultPath>${project.build.directory}/clm-scan-result.json</clmScanResultPath>
					<clmUsername>${env.clmusername}</clmUsername>
					<clmUserPassword>${env.clmpassword}</clmUserPassword>

					<clmPdfPath>${project.build.directory}/tina-maven-plugin/EclipseVortoWebeditorClmReport.pdf</clmPdfPath>
					<configFiles>
						<param> ${basedir}/clmconfig.xml </param>
					</configFiles>

					<!--Properties for Disclosure Document -->
					<productName>EclipseVorto Web Editor</productName>
					<productFullname>EclipseVorto - Web Editor</productFullname>
					<version>0.10.0</version>
					<disclosureDocPath>${project.build.directory}/EclipseVortoWebeditor_Disclosure.pdf</disclosureDocPath>
					<sourceZipPath>${project.build.directory}/thirdparty/EclipseVortoWebeditor_3rdPartySources.zip</sourceZipPath>
					<!--Properties for attaching Artifacts -->
					<attachAll>true</attachAll>
					<filesToAttach>
						<param>sources-zip,zip,OSS-sources</param>
					</filesToAttach>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.sonatype.clm</groupId>
				<artifactId>clm-maven-plugin</artifactId>
				<version>2.6.0-01</version>
				<configuration>
					<serverUrl>http://clmserver.bosch-si.com</serverUrl>
					<applicationId>vorto-editor</applicationId>
					<stage>build</stage>
				</configuration>
			</plugin>
		</plugins>
	</build>

