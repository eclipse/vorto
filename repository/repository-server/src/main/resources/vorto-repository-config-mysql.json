{
    "name" : "vorto modeshape",
    "clustering" : {
        "clusterName" : "vorto-cluster",
        "configuration" : "jgroups-config.xml",
        "locking" : "db"
    },
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    },
    "storage" : {
        "persistence" : {
            "type" : "db",
            "connectionUrl": "jdbc:mysql://127.0.0.1:3306/vorto",
            "driver": "org.mariadb.jdbc.Driver",
            "username" : "${db.username}"
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            {
                "name" : "Spring Security",
                "classname" : "org.eclipse.vorto.repository.core.security.SpringSecurityProvider"
            }
        ]
    },
    "sequencing" : {
        "removeDerivedContentWithOriginal" : false,
        "sequencers" : {
            "Vorto Sequencer" : {
                "classname" : "org.eclipse.vorto.repository.core.impl.ModelSequencer",
                "pathExpressions" : [ "default://(*.type|*.fbmodel|*.infomodel|*.mapping)/jcr:content[@jcr:data]" ]
            }
        }
    }
}
