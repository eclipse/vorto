package org.eclipse.vorto.codegen.ble.alpwise.templates

import org.eclipse.vorto.codegen.api.InvocationContext
import org.eclipse.vorto.core.api.model.informationmodel.InformationModel
import org.eclipse.vorto.codegen.ble.templates.BleGattTemplate

class AlpwiseImSourceTemplate extends BleGattTemplate<InformationModel> {

	override getFileName(InformationModel model) {
		return "BleInfoModel.c";
	}

	override getPath(InformationModel model) {
		return rootPath;
	}

	override getContent(InformationModel model, InvocationContext context) {
		'''
/* «model.name» generated by Vorto */

#include "BleInfoModel.h"

«FOR fb : model.properties»
	«IF context.getMappedElement(fb.type, "source").hasAttribute("uuid")»
		#include "«fb.type.name»/«fb.type.name».h"
	«ENDIF»
«ENDFOR»

/* FIXME: need to deal with multiple instances of the same type */
const «model.name»_t BleInfoModel = {
	«var i = 0»
	«FOR fb : model.properties»
		«IF context.getMappedElement(fb.type, "source").hasAttribute("uuid")»
			.«fb.name» = &(«fb.type.name»_Instances[«i++»]),
		«ENDIF»
	«ENDFOR»
};
'''
	}

}
